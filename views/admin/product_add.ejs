<!-- views/admin/product_edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
</head>
<body>
    <div class="container"> 
        <h1><%= title %></h1>
        <!-- Hiển thị lỗi nếu có -->
        <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
            <div class="errors"><%- include('../partials/messages') %></div>
        <% } %>
        <form action="/admin/products/create" method="POST" enctype="multipart/form-data">
            <div>
                <label>ID:</label>
                <input type="number" name="itemId" required >
            </div>
            <div>
                <label>Tên:</label>
                <input type="text" name="name" required>
            </div>
            <div>
                <label>Giá:</label>
                <input type="number" name="price" required>
            </div>
            <div>
                <label>Số lượng:</label>
                <input type="number" name="serve" required>
            </div>
            <div>
                <label>Đơn vị tính:</label>
                <input type="text" name="unit" required>
            </div>
            
            <div>
                <label>Ảnh:</label>
                <!-- Chọn ảnh mới để thay thế -->
                <input type="file" name="image" required>
            </div>
            <div>
                <label>Loại:</label>
                <input type="text" name="category" required>
            </div>
            <button type="submit">Thêm mới sản phẩm</button>
            <button class="btn-close" onclick="window.location.href='/admin/products'">Đóng</button>
        </form>
    </div>

</body>

